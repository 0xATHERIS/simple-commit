{
  "name": "simple-commit",
  "displayName": "Simple Commit",
  "description": "Simple Commit helps you write and format your commit messages. You can also customize the position of prompts. e.g. Ticket number prompt at the start of short description or within the body",
  "publisher": "0xATHERIS",
  "author": "0xATHERIS",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xATHERIS/simple-commit.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0xATHERIS/simple-commit/issues"
  },
  "homepage": "https://github.com/0xATHERIS/simple-commit",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "keywords": [
    "git",
    "commit"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-commit.commit",
        "title": "Simple Commit: Commit staged files."
      }
    ],
    "configuration": {
      "title": "Simple Commit",
      "properties": {
        "simpleCommit.scopes": {
          "type": "array",
          "default": [],
          "description": "Saved Scopes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.3.0"
  }
}
